<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>All Cards</title>
</head>
<body>
  <h1>All Cards</h1>

  <a href="/">Back to Home</a>
  <ul>
    <% cards.forEach(card => { %>
      <li>
        <strong>Question:</strong> <%= card.question %> <br>
        <strong>Answer:</strong> <%= card.answer %> <br>
        <strong>Tag:</strong> <%= card.tag %> <br>
       
         <!-- Edit button -->
        <a href="/cards/<%= card._id %>/edit" class="edit">✏️ Edit</a>

        <!-- Delete button -->
        <form action="/cards/<%= card._id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit" class="del">🗑️ Delete</button>
        </form>
        <hr>
      </li>
    <% }) %>
  </ul>
</body>
</html>
